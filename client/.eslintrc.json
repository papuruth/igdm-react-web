{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true
  },
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "camelcase": "off",
    "global-require": "off",
    "implicit-arrow-linebreak": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "react/jsx-props-no-spreading": "off",
    "no-restricted-globals": "off",
    "no-console": "off",
    "no-shadow": "off",
    "react/prop-types": "off",
    "max-len": [
      "error",
      {"code": 300,  "ignorePattern": "^import|const\\s.+=\\s*require\\(" }
    ],
    "import/no-cycle": "off",
    "single-quote": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      }
    }
  }
}
