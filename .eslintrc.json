{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["import", "prettier"],
  "rules": {
    "camelcase": "off",
    "global-require": "off",
    "implicit-arrow-linebreak": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-restricted-globals": "off",
    "no-console": "off",
    "no-shadow": "off",
    "max-len": ["error", { "code": 300 }],
    "import/no-cycle": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "single-quote": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./client/src"]]
      }
    }
  }
}
