{
  "name": "igdm-react-web",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "cd server && npm install && npm start",
    "start:clent": "craco start",
    "build:prod": "craco build",
    "build:dev": "set \"GENERATE_SOURCEMAP=false\" && craco build",
    "server": "cd server && npm start",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel start:clent server",
    "test": "craco test",
    "prettier": "prettier --write **/*.{js,jsx,json}",
    "lint": "eslint **/*.{js,jsx}",
    "format": "yarn prettier && yarn lint --fix",
    "heroku-postbuild": "yarn install --prod && GENERATE_SOURCEMAP=false yarn build:prod"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "yarn format",
      "git add ."
    ]
  },
  "dependencies": {
    "@craco/craco": "^5.6.4",
    "@emotion/core": "^10.0.28",
    "@material-ui/core": "^4.9.11",
    "@material-ui/icons": "^4.9.1",
    "@webscopeio/react-textarea-autocomplete": "^4.6.3",
    "axios": "^0.19.2",
    "bootstrap": "4.4.1",
    "connected-react-router": "^6.8.0",
    "cross-env": "^7.0.2",
    "emoji-mart": "^3.0.0",
    "history": "^4.10.1",
    "jquery": "^3.5.0",
    "lodash": "^4.17.15",
    "nojs": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-audio-analyser": "^0.3.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "react-spinners": "^0.8.1",
    "react-toastify": "^5.5.0",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-react-session": "^2.6.1",
    "redux-saga": "^1.1.3",
    "redux-thunk": "^2.3.0",
    "reduxsauce": "^1.1.2",
    "seamless-immutable": "^7.1.4",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4"
  }
}
