{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon node server.js",
    "client": "cd client && yarn start",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel client start",
    "prettier": "prettier --write **/*.{js,jsx,json}",
    "lint": "eslint **/*.{js,jsx}",
    "format": "yarn lint --fix",
    "heroku-postbuild": "cd client && yarn install --prod && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "yarn format",
      "git add ."
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "ffmpeg": "0.0.4",
    "forever": "^2.0.0",
    "instagram-private-api": "^1.39.2",
    "jimp": "^0.10.3",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.25.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5"
  }
}
